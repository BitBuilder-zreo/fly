{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@fly/ts-config/vue-app.json",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "paths": {
            "/@/*": [
                "src/*"
            ],
            "/#/*": [
                "types/*"
            ],
            "@/*": [
                "src/*"
            ],
            "#/*": [
                "types/*"
            ]
        }
    },
    "include": [
        "tests/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "types/**/*.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.js"
    ]
}